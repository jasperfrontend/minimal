---
import PageLayout from "../layouts/PageLayout.astro";
const res = await fetch("https://www.tripiedo.com/wp-json/wp/v2/posts");
const posts = await res.json();
---

<PageLayout title="The Blogness">
  <h1>Astro + WordPress ðŸš€</h1>
  {
    posts.map((post: {
      link: any;
      excerpt: any; 
      content: any;
      title: { rendered: unknown; }; 
    }) => (
            <h2 set:html={post.title.rendered} />
            <div
            set:html={post.excerpt.rendered} />
            <a href={post.link} target="_blank">Lees verder: {post.title.rendered}</a>
            <hr />
        ))
  }
</PageLayout>